{
  "name": "Hide Sensitive Information",
  "action": {},
  "manifest_version": 3,
  "version": "0.1",
  "description": "Hide fields on a website that contain sensitive information.",
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "host_permissions": ["*://*/*"]
}
